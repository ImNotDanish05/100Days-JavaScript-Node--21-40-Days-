<%- include ('temp/header') %>

<p class="text-center fw-bold">Our game list YAY :D</p>
<div class="container">
  
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% for(var i = 0 ; i < games.length ; i++ ) {%>
      <div class="col">
        <div class="card shadow-sm" style="background-color: whitesmoke">
          <img src="/data/games/gamethumbnail/<%= games[i].thumbnail %>" class="bd-placeholder-img card-img-top" 
          width="100%" 
          height="100%" 
          xmlns="http://www.w3.org/2000/svg" 
          role="img" 
          
          aria-label="Placeholder: Thumbnail" 
          preserveAspectRatio="xMidYMid slice" 
          focusable="false">
          <title>Placeholder</title>
          <rect 
          width="100%" 
          height="100%" 
          fill="#55595c"/>
        </img>
          <div class="card-body">
            <p class="card-text">
              <%= games[i].title %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
                
              <div class="btn-group">
                <a href="/game/<%= games[i]._id %>"class="btn btn-success">
                  Play
              </a>
                <!-- <a href="" class="btn btn-outline-primary" role="button">Check</a>                         -->
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary" onclick="openLink()">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
              </div>
              <div class="d-flex flex-column ">
              <small class="text-body-secondary" style="font-size: 20px;">@<%= games[i].creator %></small>
              <small class="text-body-secondary" style="font-size: 0.8rem;"><%= games[i].score %>/5</small>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
      </div>
  </div>
<%- include ('temp/footer') %>