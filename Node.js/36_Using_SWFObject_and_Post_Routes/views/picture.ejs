        <% } %>
        <div class="container"></div>
          <div class="button-container">
            <p>Page: <%= Number(id) %> </p>
          </div>
        </div>

    <% var Data = query ? DataS.results : DataS; %>
      
      <div class="container">
  
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          
            <% for(var i = 0 ; i < Data.length ; i++ ) {%>
            <div class="col">
                <div class="card shadow-sm" style="background-color: whitesmoke ; border-width: 5px; border-color: <%= Data[i].color %> ; border-style: solid">
                  <img src="<%= Data[i].urls.small %>" class="bd-placeholder-img card-img-top" 
                  width="100%" 
                  height="100%" 
                  xmlns="http://www.w3.org/2000/svg" 
                  role="img" 
                  
                  aria-label="Placeholder: Thumbnail" 
                  preserveAspectRatio="xMidYMid slice" 
                  focusable="false">
                  <title>Placeholder</title>
                  <rect 
                  width="100%" 
                  height="100%" 
                  fill="#55595c"/>
                </img>
                  <div class="card-body">
                    <p class="card-text">
                        <%= Data[i].alt_description %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        
                      <div class="btn-group">

                        <a href="<%= Data[i].urls.full %>" class="btn btn-outline-light" role="button" style="border-color: <%= Data[i].color%>; border-width: 3px ; color: gray">Check</a>
                        <a href="<%= Data[i].urls.full %>"class="btn btn-light" style="border-width: 3px ; border-color: <%= Data[i].color%>">
                          <i class="bi bi-hand-thumbs-up"> <%= Data[i].likes %></i>
                      </a>
                        <!-- <a href="<%= Data[i].urls.full %>" class="btn btn-outline-primary" role="button">Check</a>                         -->
                        <!-- <button type="button" class="btn btn-sm btn-outline-secondary" onclick="openLink()">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                      </div>
                      <div class="d-flex flex-column ">
                      <small class="text-body-secondary" style="font-size: 20px;">@<%= Data[i].user.username %></small>
                      <small class="text-body-secondary" style="font-size: 0.8rem;"><%= Data[i].updated_at %></small>
                    </div>
                    </div>
                  </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    </div>
</main>




