      <p>Searching: <%= searchterm %></p>
      <div class="container">
        <div class="button-container">
      <form class="d-flex" role="search" action="/picture/search/<%= Number(id) - 1 %>?SearchTerm=<%= searchterm %>" method="get">
        <input type="hidden" name="SearchTerm" value="<%= searchterm %>">
        <button type="submit" class="btn btn-secondary">&lt</button>
      </form>
      <form class="d-flex" role="search" action="/picture/search/<%= Number(id) + 1 %>?SearchTerm=<%= searchterm %>" method="get">
        <input type="hidden" name="SearchTerm" value="<%= searchterm %>">
      <button type="submit" class="btn btn-secondary">&gt</button>
      </form>
    </div>
    </div>
      <% }else{ %>
        <div class="container">
          <div class="button-container">
        <form class="d-flex" role="search" action="/picture/page/<%= Number(id) - 1 %>" method="get">
          <button type="submit" class="btn btn-secondary">&lt</button>
        </form>
        <form class="d-flex" role="search" action="/picture/page/<%= Number(id) + 1 %>" method="get">
        <button type="submit" class="btn btn-secondary">&gt</button>
        </form>
      </div>
